#include "mbed.h"

DigitalIn myButtons[] = {(p11),(p12)};
BusOut r1LEDs (p5,p6,p7);
BusOut r2LEDs (p8,p9,p10);

int main(){
    r1LEDs=0;
    r2LEDs=0;
    while(1){
        r1LEDs = r1LEDs|0x0c;
        wait_ms(100);
        r1LEDs = r1LEDs|0x0c;
        wait_ms(100);
        r1LEDs = r1LEDs|0x0c;
        wait_ms(100);
        r1LEDs = r1LEDs|0x14;
        wait_ms(100);
        r1LEDs = r1LEDs|0x24;
        wait_ms(100);
        r1LEDs = r1LEDs|0x26;
        wait_ms(100);
        r1LEDs = r1LEDs|0x21;
        wait_ms(100);
        r1LEDs = r1LEDs|0x21;
        wait_ms(100);
        r1LEDs = r1LEDs|0x21;
        wait_ms(100);
        r1LEDs = r1LEDs|0x22;
        wait_ms(100);
        r1LEDs = r1LEDs|0x24;
        wait_ms(100);
        r1LEDs = r1LEDs|0x34;
        wait_ms(100);
        r1LEDs = r1LEDs|0x0c;
        wait_ms(100);
    }
}

